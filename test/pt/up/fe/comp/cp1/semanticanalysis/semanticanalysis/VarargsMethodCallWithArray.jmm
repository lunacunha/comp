class VarargsMethodCallWithArray {
    public int sumAll(int... numbers) {
        int sum;
        int i;

        sum = 0;
        i = 0;

        while (i < numbers.length) {
            sum = sum + numbers[i];
            i = i + 1;
        }

        return sum;
    }

    public int test() {
        int[] arr;

        arr = new int[3];
        arr[0] = 10;
        arr[1] = 20;
        arr[2] = 30;

        return this.sumAll(arr); // Valid: varargs method call with array argument
    }
}